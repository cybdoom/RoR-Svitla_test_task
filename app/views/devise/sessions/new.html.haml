= content_for(:title) do
  Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-signin', role: "form"}) do |f|
  %h2.form-signin-heading Please sign in
  = devise_error_messages!
  = f.email_field :email, :autofocus => true, class: 'form-control', autofocus: "", placeholder: "Email address", required: ""
  = f.password_field :password, class: 'form-control', placeholder: "Password", required: ""
  = f.button "Sign in", class: 'btn btn-lg btn-primary btn-block'
  = render "devise/shared/links"
