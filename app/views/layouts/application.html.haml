!!!
%html{ lang: 'en' }
  = render 'layouts/head'
  %body
    .container
      = bootstrap_alerts
      %br
      %ul#user_menu
        %li
          = image_tag current_user.gravatar_url, id: 'avatar', title: current_user.email
        %li
          = link_to('Edit profile', edit_user_registration_path, class: "btn btn-warning")
        %li
          = link_to('Log out', destroy_user_session_path, :method => :delete, class: 'btn btn-danger')

    %nav.navbar.navbar-default{ role: 'navigation' }
      .container
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              = link_to 'Images', images_path

    .container
      = yield

